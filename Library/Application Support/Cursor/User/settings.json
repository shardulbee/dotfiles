{
  "editor.fontFamily": "Berkeley Mono Trial",
  "editor.codeLensFontFamily": "Berkeley Mono Trial",
  "editor.inlayHints.fontFamily": "Berkeley Mono Trial",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.renderLineHighlight": "gutter",
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "off",
  "breadcrumbs.enabled": false,
  "explorer.confirmDelete": false,
  "window.commandCenter": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "zig.zls.path": "/opt/homebrew/bin/zls",
  "zig.zls.enabled": "on",
  "git.openRepositoryInParentFolders": "always",
  "cursor.composer.collapsePaneInputBoxPills": true,
  "update.releaseTrack": "prerelease",
  "workbench.editor.editorActionsLocation": "titleBar",
  "workbench.activityBar.location": "hidden",
  "eslint.format.enable": true,
  "explorer.confirmDragAndDrop": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "cursor.cpp.disabledLanguages": ["plaintext"],
  "workbench.editor.enablePreview": false,
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/usr/local/bin/fish"
    }
  },
  "terminal.integrated.defaultProfile.osx": "fish",
  "cursor.general.enableShadowWorkspace": true,
  "cursor.composer.shouldShowMarkdownHoverParticipantActions2": true,
  "[zig]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ziglang.vscode-zig",
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "files.eol": "\n"
  },
  "cursor.diffs.useCharacterLevelDiffs": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "zig.path": "zig",
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "amp.experimental.fuzzySearch.enabled": true,
  "amp.tab.enabled": false,
  "amp.commands.allowlist": ["bin/rails", "mise"],
  "terminal.integrated.defaultProfile.linux": "",
  "amp.dangerouslyAllowAll": true,
  "terminal.external.osxExec": "Ghostty.app",
  "amp.url": "https://ampcode.com/",
  "security.workspace.trust.untrustedFiles": "open",
  "amp.mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest", "--isolated"]
    }
  },
  "amp.permissions": [
    {
      "tool": "Bash",
      "matches": {
        "cmd": "bin/rails"
      },
      "action": "allow"
    },
    {
      "tool": "Bash",
      "matches": {
        "cmd": "mise"
      },
      "action": "allow"
    }
  ],
  "workbench.colorTheme": "One Dark Pro",
  "extensions.ignoreRecommendations": true,
  "editor.inlineSuggest.fontFamily": "Berkeley Mono Trial",
  "debug.console.fontFamily": "Berkeley Mono Trial",
  "scm.inputFontFamily": "Berkeley Mono Trial",
  "terminal.integrated.fontFamily": "Berkeley Mono Trial",
  "markdown.preview.fontFamily": "-apple-system, Berkeley Mono Trial, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif"
}
